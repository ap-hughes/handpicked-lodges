    <noscript><img height="1" width="1" style="display:none"
      src="https://www.facebook.com/tr?id=442568402834634&ev=PageView&noscript=1"
    /></noscript>
    <!-- End Facebook Pixel Code -->
    <link rel="stylesheet" type="text/css" href="//cdnjs.cloudflare.com/ajax/libs/cookieconsent2/3.1.0/cookieconsent.min.css" />
    <script src="//cdnjs.cloudflare.com/ajax/libs/cookieconsent2/3.1.0/cookieconsent.min.js"></script>
    <script>
      window.addEventListener("load", function(){
      window.cookieconsent.initialise({
        "palette": {
          "popup": {
            "background": "#f9fcfc",
            "text": "#4f4f4f"
          },
          "button": {
            "background": "#82aeb1",
            "text": "#ffffff"
          }
        },
        "content": {
          "href": "/pages/cookies"
        }
      })});
    </script>
  </head>
  <body>
    <div class="alert alert-info alert-dismissible" role="alert">
      <a class="white-link" href="https://www.seasgairlodges.com/posts/57">For more information on our response to Coronavirus (COVID-19) please click here.</a>
    </div>
    <%= render 'shared/navbar' %>
    <%= render 'shared/flashes' %>
    <!-- <div id="main-content"> -->
      <%= yield %>
    <!-- </div> -->
    <%= render 'shared/footer' %>
    <%= javascript_include_tag 'application' %>
    <%= javascript_pack_tag 'application' %>
  </body>
</html>
