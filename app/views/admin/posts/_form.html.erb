<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2">
      <%= simple_form_for([:admin, @post]) do |f| %>
        <div class="form-group">
          <%= f.input :title, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.input :image %>
        </div>
        <% if @post.image.attached? && @post.image.attachment.blob.present? && @post.image.attachment.blob.persisted? %>
          <div class="row">
            <div class="col-xs-12 col-sm-6">
              <div class="white-card">
                <p><strong>Current main photo</strong></p>
                <div class="link-card-cloudinary" style="background-image: url('<%= rails_representation_url @post.image.variant(resize: "600x600") %>');">
                </div>
              </div>
            </div>
          </div>
        <% end %>
        <% if @post.photo? %>
          <div class="row">
            <div class="col-xs-12 col-sm-6">
              <div class="white-card">
                <p><strong>Deprecated Cloudinary photo</strong></p>
                <div class="link-card-cloudinary" style="background-image: url('<%= cl_image_path @post.photo, height: 300, width: 300, crop: :fill %>');">
                </div>
              </div>
            </div>
          </div>
        <% end %>
        <div class="form-group">
          <%= f.input :body, :as => :ckeditor, input_html: {:ckeditor => {:toolbar => 'FULL'}}, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.button :submit, class: "btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
