<% content_for :meta_title, "Handpicked Lodges Blog" %>
<% content_for :meta_description, "Handpicked Lodges Blog, Cairngorms National Park, Luxury Holiday Lodges, In and Around Aviemore" %>
<div class="show-banner-cloudinary" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= image_path('blog-small.jpg') %>');">
  <div class="header-text">
    <h1 class="text-center">Handpicked Lodges Blog</h1>
  </div>
</div>
<br>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-8">
      <% @posts.each do |post| %>
        <div class="link-card-container">
          <%= link_to post_path(post) do %>
            <div class="link-card-cloudinary" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path post.photo %>');">
            </div>
            <div class="link-card-content">
              <h4><%= post.title %></h4>
              <p><%= post.created_at.strftime('%d %b, %Y') %></p>
              <p><%= strip_tags post.body.truncate(300) %></p>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="col-xs-12 col-sm-4" id="posts-sidebar">
      <h4>Recent posts</h4>
      <% @posts.each do |post| %>
        <p><%= link_to "#{post.title} (#{post.created_at.strftime('%d %b, %Y')})", post_path(post) %></p>
      <% end %>
    </div>
  </div>
</div>
