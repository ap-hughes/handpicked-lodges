<script src="//code.jquery.com/jquery-1.9.1.min.js"></script>
<div id="handpicked-navbar">
  <!-- <div id="handpicked-navbar-spacer"> -->
    <!-- Logo -->


    <!-- Right navigation - desktop -->
    <div class="handpicked-navbar-center hidden-xs hidden-sm">
      <%= link_to root_path, id: "handpicked-navbar-brand" do %>
        <%= image_tag "handpicked-logo.png" %>
      <% end %>
      <div class="handpicked-navbar-right hidden-xs hidden-sm">
        <div class="handpicked-navbar-item"><%= link_to 'The Lodges', properties_path, { :class=>"handpicked-navbar-link" } %></div>
        <div class="handpicked-navbar-item"><%= link_to 'Go Catered?', pages_go_catered_path, { :class=>"handpicked-navbar-link" } %></div>
        <div class="handpicked-navbar-item"><%= link_to 'About Us', pages_about_us_path, { :class=>"handpicked-navbar-link" } %></div>
        <div class="handpicked-navbar-item"><%= link_to 'Contact', pages_contact_path, { :class=>"handpicked-navbar-link" } %></div>
        <div class="handpicked-navbar-item">
          <div class="dropdown">
            <div class="dropdown-toggle info-hover" data-toggle="dropdown"><p>More information <%= fa_icon "caret-down" %></p></div>
            <ul class="dropdown-menu dropdown-menu-right handpicked-navbar-dropdown-menu">
              <li><%= link_to 'About the Area', pages_about_the_area_path %></li>
              <li><%= link_to 'Getting here', pages_getting_here_path %></li>
              <li><%= link_to 'Pet Friendly', pages_pet_friendly_path %></li>
              <li><%= link_to 'Families', pages_families_path %></li>
              <li><%= link_to 'HPL Blog', posts_path %></li>
              <li><%= link_to 'Reviews', pages_reviews_path %></li>
              <li><%= link_to 'Own a Property?', pages_own_a_property_path %></li>
              <li><%= link_to 'Terms and Conditions', pages_terms_and_conditions_path %></li>
              <li><%= link_to 'Frequently Asked Questions', pages_frequently_asked_questions_path %></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <!-- </div> -->

  <!-- Dropdown for mobile only -->
  <div class="hidden-md hidden-lg">
    <%= link_to root_path, id: "handpicked-navbar-brand-small" do %>
      <%= image_tag "handpicked-logo.png" %>
    <% end %>
  </div>
  <div class="handpicked-navbar-item-mobile hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right handpicked-navbar-dropdown-menu text-center">
        <li><%= link_to 'The Lodges', properties_path, tabindex:"-1" %></li>
        <li><%= link_to 'Go Catered?', pages_go_catered_path, tabindex:"-1" %></li>
        <li><%= link_to 'About Us', pages_about_us_path, tabindex:"-1" %></li>
        <li><%= link_to 'Contact', pages_contact_path, tabindex:"-1" %></li>
        <li class="dropdown-submenu pull-right">
          <a class="test" tabindex="-1" href="#">More info<span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><%= link_to 'About the Area', pages_about_the_area_path, tabindex:"-1" %></li>
            <li><%= link_to 'Getting here', pages_getting_here_path, tabindex:"-1" %></li>
            <li><%= link_to 'Pet Friendly', pages_pet_friendly_path, tabindex:"-1" %></li>
            <li><%= link_to 'Families', pages_families_path, tabindex:"-1" %></li>
            <li><%= link_to 'HPL Blog', posts_path, tabindex:"-1" %></li>
            <li><%= link_to 'Reviews', pages_reviews_path, tabindex:"-1" %></li>
            <li><%= link_to 'Own a Property?', pages_own_a_property_path, tabindex:"-1" %></li>
            <li><%= link_to 'Terms and Conditions', pages_terms_and_conditions_path, tabindex:"-1" %></li>
            <li><%= link_to 'FAQs', pages_frequently_asked_questions_path, tabindex:"-1" %></li>
          </ul>
        </li>
      </ul>
    </div>
  </div>
</div>
<script>
$(document).ready(function(){
  $('.dropdown-submenu a.test').on("click", function(e){
    $(this).next('ul').toggle();
    e.stopPropagation();
    e.preventDefault();
  });
});
</script>
